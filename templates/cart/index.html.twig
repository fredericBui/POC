{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% if cart.elements %}

<div>
    Total du panier : {{cart.total}}
</div>

<table>
    <tr>
        <th>Name</th>
        <th>quantity</th>
        <th>Price</th>
    </tr>


{% for element in cart.elements %}
    <tr>
        <td>{{element.poc.name }}</td>
        <td>{{element.quantity }}</td>
        <td>{{element.poc.price }}</td>
        <td><a href="{{ path('cart_remove', {'id': element.poc.id}) }}">Remove one</a></td>
    </tr>
{% endfor %}

</table>

<a href="{{ path('cart_clear') }}">Clear cart</a>

{% endif %}

{% endblock %}
