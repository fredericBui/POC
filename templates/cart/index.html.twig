{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% if cart.elements %}

<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>

{% for element in cart.elements %}
    <tr>
        <td>{{element.poc.name }}</td>
        <td>{{element.quantity }}</td>
        <td>{{element.poc.price }}€</td>
        <td><a href="{{ path('cart_remove', {'id': element.poc.id}) }}"><i class="fas fa-trash-alt"></i></a></td>
    </tr>
{% endfor %}
    <tr>
        <td>Total : {{cart.total}} €</td>
    </tr>
</table>

<a href="{{ path('payment_index') }}"><button class="btn btn-success"><i class="far fa-credit-card"></i> Pay</button></a>
<a href="{{ path('cart_clear') }}"><button class="btn btn-danger">Clear cart</button></a>

{% else %}
Cart empty

{% endif %}

{% endblock %}
