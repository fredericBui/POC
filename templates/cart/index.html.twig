{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% if cart.elements %}

<table>
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>


{% for element in cart.elements %}
    <tr>
        <td>{{element.poc.name }}</td>
        <td>{{element.quantity }}</td>
        <td>{{element.poc.price }}â‚¬</td>
        <td><a href="{{ path('cart_remove', {'id': element.poc.id}) }}"><button class="btn btn-danger">Remove one</button></a></td>
    </tr>
{% endfor %}

</table>

<div>
    Total of the shopping cart : {{cart.total}}
</div>

<a href="{{ path('payment_index') }}"><button class="btn btn-success">Pay</button></a>
<a href="{{ path('cart_clear') }}"><button class="btn btn-danger">Clear cart</button></a>

{% else %}
Cart empty

{% endif %}

{% endblock %}
