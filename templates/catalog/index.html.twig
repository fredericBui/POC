{% extends 'base.html.twig' %}

{% block title %}POC Catalog{% endblock %}

{% block body %}
    <h1 class="text-center">POC catalog</h1>

    <!--Search bar-->
    <form id="searchBar" class="m-3" method="get" action="{{ path('catalog_index') }}">
        <button class="btn" type="submit"><i class="fas fa-search"></i></button>
        <input id="searchInput" type="text" placeholder="Search by keywords" name="keyword"/>
    </form>

    <div class="text-center my-2">
        <form>
            <button class="btn btn-success" name="category" value="E-commerce" type="submit">E-commerce</button>
            <button class="btn btn-primary" name="category" value="Social Network" type="submit">Social Network</button>
            <button class="btn btn-light" name="category" value="Landing Page" type="submit">Landing Page</button>
            <button class="btn btn-danger" name="category" value="Blog" type="submit">Blog</button>
        </form>
    </div>
    <div class="text-right my-2">
        <a href="{{ path('catalog_index') }}"><button class="btn btn-success" ><i class="fas fa-book-open"></i> See all POC</button></a>
    </div>

    <section id="pocList">
    {% for poc in pocs %}
        {{include("Composants/card.html.twig")}}
    {% else %}
        <p>No records found</p>
    {% endfor %}
    </section>

    <p class="text-center">You can't find the missing piece for your incredible project ?</p>
    <p class="text-center">Please <a href="{{path("contact")}}">contact us</a>!</p>


{% endblock %}
