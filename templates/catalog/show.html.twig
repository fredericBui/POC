{% extends 'base.html.twig' %}

{% block title %}Poc{% endblock %}

{% block body %}
    <h1>Poc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poc.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ poc.name }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>
                    <img src="{{ asset('uploads/' ~ poc.imageFilename ) }}"/>
                </td>
            </tr>
            <tr>
                <th>GithubLink</th>
                <td>{{ poc.githubLink }}</td>
            </tr>
            <tr>
                <th>LiveDemoLink</th>
                <td>{{ poc.liveDemoLink }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ poc.keywords }}</td>
            </tr>
            <tr>
                <th>IsPremium</th>
                <td>{{ poc.isPremium ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('catalog_index') }}">back to list</a>

{% endblock %}
