{% extends 'base.html.twig' %}

{% block title %}Poc{% endblock %}

{% block body %}
    <h1 class="t-center">{{ poc.name }}</h1>

    <article class="card">
        <div class="card-body">
            <!--<p class="t-right"><i class="fas fa-heart" onclick="toggleThis(this, 'switchOn')"></i></p>-->
            <img src="{{ asset('uploads/' ~ poc.imageFilename ) }}" alt="">
            <p>Author : {{ poc.Author }} <br>
            Keywords : {{ poc.keywords }} <br>
            <!---->
            Langages :
            {% for language in poc.languages %}
            {{language.name}}
            {% endfor %}
            <br>
            <!---->
            Categories :
            {% for category in poc.categories %}
            {{category.name}}
            {% endfor %}
            <br>
            {% if poc.isPremium %}
            Premium : {{ poc.isPremium ? 'Yes' : 'No' }} <br>
            Price : {{ poc.price }} â‚¬ <br>
            {% endif %}
            </p>
            

            {% if poc.isPremium %}
            <a href="{{ path('cart_add', {'id': poc.id}) }}"><button class="btn btn-success"><i class="fas fa-shopping-cart"></i> Add to cart</button></a>
            {% endif %}
            {% if poc.isPremium == false %}
            <a href="{{ poc.githubLink }}" target="_blank"><button class="btn btn-success"><i class="fab fa-github"></i> Github Link</button></a>
            {% endif %}
            <a href="{{ poc.liveDemoLink }}" target="_blank"><button class="btn btn-primary"><i class="fas fa-eye"></i> Live demo</button></a>
        </div>
    </article>

    <a href="{{ path('catalog_index') }}">back to list</a>

{% endblock %}
