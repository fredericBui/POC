{% extends 'base.html.twig' %}

{% block title %}Purchase index{% endblock %}

{% block body %}
    <h1>Purchase index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Buyer</th>
                <th>Poc</th>
                <th>CreateAt</th>
                <th>Reference</th>
                <th>Actionss</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.id }}</td>
                <td>{{ purchase.buyer }}</td>
                <td>{{ purchase.poc }}</td>
                <td>{{ purchase.createAt ? purchase.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ purchase.reference }}</td>
                <td>
                    <a href="{{ path('admin_purchase_show', {'id': purchase.id}) }}"><i class="fas fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
