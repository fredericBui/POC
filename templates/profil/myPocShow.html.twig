{% extends 'base.html.twig' %}

{% block title %}Poc{% endblock %}

{% block body %}
    <h1>Poc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poc.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ poc.name }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th> 
                <td>{{ poc.imageFilename }}</td>
            </tr>
            <tr>
                <th>GithubLink</th>
                <td>{{ poc.githubLink }}</td>
            </tr>
            <tr>
                <th>LiveDemoLink</th>
                <td>{{ poc.liveDemoLink }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ poc.keywords }}</td>
            </tr>
            <tr>
                <th>Premium (1=yes)</th>
                <td>{{ poc.isPremium }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ poc.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profil_myPoc') }}"><button class="btn btn-primary">back to my POC</button></a>

    <a href="{{ path('profil_myPoc_edit', {'id': poc.id}) }}"><button class="btn btn-success">Edit</button></a>

    {{ include('profil/_delete_form.html.twig') }}


{% endblock %}
