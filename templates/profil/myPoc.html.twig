{% extends 'base.html.twig' %}

{% block title %}My POC{% endblock %}

{% block body %}
    <h1>My POC</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ImageFilename</th>
                <th>Keywords</th>
                <th>Premium (1=yes)</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poc in pocs %}
            <tr>
                <td>{{ poc.id }}</td>
                <td>{{ poc.name }}</td>
                <td>
                    <img src= "{{ asset('uploads/' ~ poc.imageFilename ) }}"/>
                </td>
                <td>{{ poc.keywords }}</td>
                <td>{{ poc.isPremium }}</td>
                <td>{{ poc.price }}</td>
                <td>
                    <a href="{{path('profil_myPoc_show', {'id': poc.id}) }}"><button class="btn btn-primary">Show</button></a>
                    <a href="{{ path('profil_myPoc_edit', {'id': poc.id}) }}"><button class="btn btn-primary">Edit</button></a>
                </td>
            </tr> 
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href={{path("profil_addPoc")}}><button class="btn btn-success">Create new</button></a>

{% endblock %}
