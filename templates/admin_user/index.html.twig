{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center">Users</h1>
    <div class="divider2b text-light">
        {{include('Composants/navAdmin.html.twig')}}
        <table class="table text-light">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Pseudo</th>
                    <th>Actionss</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    

{% endblock %}
